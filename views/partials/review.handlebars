<div class="row">
    <div class="container blogBox">
        <div class="row  justify-content-center headerRow">
            <div class="col-8">
                <h2>
                    <a class="blogTitle text-uppercase" href="/post/{{id}}">{{title}}</a>                     
                </h2>
            </div>
            <div class="col-4">
                <p class="blogCreate text-right">Created by
                    {{user.username}}
                    on
                    {{formatDate created_at}}
                </p>
            </div>
        </div>
        <div class="blogDesc">
            <p class="text-justify blogDescMain">
                {{content}}
            </p>
        </div>
    </div>

</div>