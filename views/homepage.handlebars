<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      <!-- Login Panel -->
      <div class="card">
        <div class="card-header">
          Login
        </div>
        <div class="card-body">
          <!-- Your login form goes here -->
          <form id="frmSignUp">
            <div class="form-group">
              <label for="loginEmail">User nme / Email address</label>
              <input type="email" class="form-control" id="txtboxLoginUsername" placeholder="Enter email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
              <small class="form-text text-muted">Please enter a valid email address.</small>
            </div>
            <div class="form-group">
              <label for="loginPassword">Password</label>
              <input type="password" class="form-control" id="txtboxLoginPwd" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-md-6">
      <!-- Signup Panel -->
      <div class="card">
        <div class="card-header">
          Signup
        </div>
        <div class="card-body">
          <!-- Signup form -->
          <form id="frmSignUp">
            <div class="form-group">
              <label for="signupName">Full Name</label>
              <input type="text" class="form-control" id="txtboxNameSignUp" placeholder="Enter your full name" required>
            </div>
            <div class="form-group">
              <label for="signupEmail">Email address</label>
              <input type="email" class="form-control" id="txtboxEmailSignUp" placeholder="Enter email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" required>
              <small class="form-text text-muted">Please enter a valid email address.</small>
            </div>
            <div class="form-group">
              <label for="signupPassword">Password</label>
              <input type="password" class="form-control" id="txtboxPwdSignUp" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-success">Signup</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/login.js"></script>
<script src="./js/signup.js"></script>